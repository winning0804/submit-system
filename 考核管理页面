    <script type="text/javascript" src="jquery-1.12.4.js"></script>
    <script>

        //Tab栏切换
        function $(id){
            return typeof id==='string'?document.getElementById(id):id;
        }
        window.onload=function () {
            var titles=$('tab').getElementsByTagName('li');
            var div=$('contain').getElementsByTagName('div');
            for(var i=0;i<div.length;i++){
                titles[i].id=i;
                titles[i].onclick=function(){
                    for(var j=0;j<div.length;j++){
                        titles[j].className='';
                        div[j].style.display='none';
                    }
                    this.className='select';
                    div[this.id].style.display='block';
                }
            }
            
        }


        //发布考核
        var httpRequest;
        function neatest() {
            if(window.XMLHttpRequest) {
                httpRequest = new XMLHttpRequest();
            }else if(window.ActiveXObject) {
                httpRequest = new ActiveXObject();
            }
            httpRequest.open("POST", "${pageContext.request.contextPath }/admin/release_do", true);
            httpRequest.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
            var tsn=document.getElementById('tsn').value;
            var tsd=document.getElementById('tsd').value;
            var ddl=document.getElementById('ddl').value;
            var content=document.getElementById('content').value;
            httpRequest.send(JSON.stringify({
                assesId:tsd,name:tsn,content:content,deadline:ddl
            }))
        }

        //加载页面
        $.ajax({
            type:"get",
            url:"${pageContext.request.contextPath }/admin/assess_managment",
            success:function(msg){
                var content=" ";  
                for(var i=0;i<msg.length;i++){  
                    content+="<tr>";  
                    for(o in msg[i]){  
                        content+="<th>"+msg[i][o]+"</th>";  
                    }  
                    content+='<th><a href="#" class="delete" onclick="dele(this)">删除</a></th>'; 
                    content+="</tr>"
                }  
                document.getElementById("management").innerHTML+=content; 
        })
        
        //删除
        function dele(now){
            var p=$(now).parentNode.parentNode.childNodes[0].value;
            if(window.XMLHttpRequest) {
                httpRequest = new XMLHttpRequest();
            }else if(window.ActiveXObject) {
                httpRequest = new ActiveXObject();
            }
            httpRequest.open("POST", "${pageContext.request.contextPath }/admin/assess_delet” , true);
            httpRequest.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
            httpRequest.send(p);
        }

        //打开详情页面
        function opendetail(){
            var p=$(now).parentNode.parentNode.childNodes[0].value;
            if(window.XMLHttpRequest) {
                httpRequest = new XMLHttpRequest();
            }else if(window.ActiveXObject) {
                httpRequest = new ActiveXObject();
            }
            httpRequest.open("POST", "${pageContext.request.contextPath }/admin/get_assess" , true);
            httpRequest.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
            httpRequest.send(p);
            window.open('testdetail.html');
        }


    </script>
